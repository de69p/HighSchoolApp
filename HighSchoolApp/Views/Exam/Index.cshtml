<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Exams List</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
<h2>Exams List</h2>

<a href="@Url.Action("Create", "Exam")" class="btn btn-primary mb-3">Add New Exam</a>

<table>
    <thead>
    <tr>
        <th>Student ID</th>
        <th>Score</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var exam in Model)
    {
        <tr>
            <td>@exam.StudentId</td> 
            <td>@exam.Score</td>
            <td>
                <a href="@Url.Action("Edit", "Exam", new { id = exam.ExamId })">Edit</a> |
                <a href="@Url.Action("Delete", "Exam", new { id = exam.ExamId })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>
