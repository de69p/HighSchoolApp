<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 8px 12px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

<h2>Teachers List</h2>

<a href="@Url.Action("Create", "Teacher")" class="btn btn-primary mb-3">Add New Teacher</a>

<table>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var teacher in Model)
    {
        <tr>
            <td>@teacher.FirstName</td>
            <td>@teacher.LastName</td>
            <td>
                <a href="@Url.Action("Edit", "Teacher", new { id = teacher.TeacherId })">Edit</a> |
                <a href="@Url.Action("Delete", "Teacher", new { id = teacher.TeacherId })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>